<h1><%= @page.title %></h1>

<p><%= @page.body %></p>

<div style="display:flex;">
  <div style="margin-right: 1rem">
    <%= link_to 'Wiki list', pages_path %>
  </div>
  <div style="margin-right: 1rem">
    <%= link_to 'Edit page', edit_page_path(@page) %>
  </div>
  <div>
    <%= link_to 'Destroy page', page_path(@page), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  </div>
</div>